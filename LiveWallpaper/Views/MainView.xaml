<controls:MetroWindow
    x:Class="LiveWallpaper.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:conveters="clr-namespace:LiveWallpaper.Views.Conveters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:lan="clr-namespace:MultiLanguageForXAML;assembly=MultiLanguageForXAML"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=" "
    MinWidth="450"
    MinHeight="200"
    cal:Message.Attach="[Event SourceInitialized]=[Action SourceInitialized()]"
    lan:Xaml.Key="common_appName"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" Background="#FF1D1D1D" Foreground="White">
    <Window.Resources>
        <conveters:UriToCachedImageConverter
            x:Key="UriToCachedImageConverter"
            DecodePixelHeight="110"
            DecodePixelWidth="180" />
    </Window.Resources>
    <dragablz:TabablzControl Style="{StaticResource MaterialDesignAlternateTabablzControlStyle}" BorderBrush="#FF292929">
        <!--<dragablz:TabablzControl.InterTabController>
            <dragablz:InterTabController />
        </dragablz:TabablzControl.InterTabController>-->
        <TabItem lan:Xaml.Key="mainUI_localWallpaper" Foreground="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <ListView
                    x:Name="Wallpapers"
                    Margin="5"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="#89000000">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Width="180"
                                Height="110"
                                cal:Action.TargetWithoutContext="MainViewModel"
                                cal:Message.Attach="[Event PreviewMouseLeftButtonDown] = [Action ApplyWallpaper($datacontext)];                                 [Event PreviewMouseRightButtonDown] = [Action ApplyLastWallpaper($datacontext)]"
                                Background="Gray"
                                ToolTip="{Binding ProjectInfo.Description}">
                                <Image Source="{Binding AbsolutePreviewPath, Converter={StaticResource UriToCachedImageConverter}}" />
                                <TextBlock
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Foreground="White"
                                    Text="{Binding ProjectInfo.Title}" />
                                <Grid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem
                                            HorizontalContentAlignment="Stretch"
                                            VerticalContentAlignment="Stretch"
                                            cal:Action.Target="MainViewModel"
                                            lan:Xaml.Key="setting_screen"
                                            Click="MenuItem_Click"
                                            ItemsSource="{Binding Displays}"
                                            Visibility="{Binding MultiDiplay, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <!--<MenuItem.ItemTemplate>
                                                <DataTemplate>
                                                    <Label
                                                        MinWidth="120"
                                                        HorizontalAlignment="Stretch"
                                                        VerticalAlignment="Stretch"
                                                        HorizontalContentAlignment="Center"
                                                        cal:Action.TargetWithoutContext="MainViewModel"
                                                        cal:Message.Attach="[Event MouseDown] = [Action ApplyWallpaperToDisplay($datacontext)]"
                                                        Background="#5B800080"
                                                        Content="{Binding}" />
                                                </DataTemplate>
                                            </MenuItem.ItemTemplate>-->
                                        </MenuItem>
                                        <MenuItem
                                            cal:Action.TargetWithoutContext="MainViewModel"
                                            cal:Message.Attach="[Event Click] = [Action EditWallpaper($datacontext)]"
                                            lan:Xaml.Key="common_edit" />
                                        <MenuItem
                                            cal:Action.TargetWithoutContext="MainViewModel"
                                            cal:Message.Attach="[Event Click] = [Action ExploreWallpaper($datacontext)]"
                                            lan:Xaml.Key="common_openFile" />
                                        <MenuItem
                                            cal:Action.TargetWithoutContext="MainViewModel"
                                            cal:Message.Attach="[Event Click] = [Action DeleteWallpaper($datacontext)]"
                                            lan:Xaml.Key="common_delete" />
                                    </ContextMenu>
                                </Grid.ContextMenu>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="Setting"
                        Margin="5,2,0,5"
                        HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" Background="#FF638BAC" BorderBrush="#FF638BAC" Foreground="Black">
                        <iconPacks:PackIconMaterial
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Kind="AccountSettingsOutline" Foreground="#DD000000" />
                    </Button>
                    <!--<ComboBox />-->
                    <StackPanel
                        Grid.Column="2"
                        Margin="5,2,5,5"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button x:Name="RefreshLocalWallpaper" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" Background="#FF638BAC" BorderBrush="#FF638BAC" Foreground="Black">
                            <Button.ToolTip>
                                <Run lan:Xaml.Key="mainUI_refreshWallpaper" />
                            </Button.ToolTip>
                            <iconPacks:PackIconMaterial
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Kind="Refresh" />
                        </Button>
                        <Button
                            x:Name="CreateWallpaper"
                            Margin="10,0,0,0"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}" BorderBrush="#FF638BAC" Background="#FF638BAC" Foreground="Black">
                            <Button.ToolTip>
                                <Run lan:Xaml.Key="mainUI_createWallpaper" />
                            </Button.ToolTip>
                            <materialDesign:PackIcon
                                Width="26"
                                Height="26"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Kind="Add" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </TabItem>
        <TabItem lan:Xaml.Key="mainUI_wallpaperStore" Foreground="White">
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Stretch"
                        lan:Xaml.Key="mainUI_thirdParty_desc"
                        TextAlignment="Center"
                        TextWrapping="Wrap" Foreground="White" />
                    <TextBlock Margin="0,50,0,0" TextAlignment="Center" Foreground="White">
                        <Hyperlink Click="Hyperlink_Click" NavigateUri="https://www.desktophut.com/">DesktopHut</Hyperlink>
                    </TextBlock>
                    <!--<Button
                        x:Name="DownloadStore"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0">
                        <TextBlock
                            lan:Xaml.Key="mainUI_downloadStore"
                            Foreground="Blue"
                            TextDecorations="Underline" />
                    </Button>
                    <Button
                        x:Name="OpenLocalServer"
                        Margin="5"
                        HorizontalAlignment="Center"
                        lan:Xaml.Key="mainUI_openLocalServer" />-->
                </StackPanel>
            </Grid>
        </TabItem>
    </dragablz:TabablzControl>
</controls:MetroWindow>
